// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Stats {
  id               Int      @id @default(autoincrement())
  name             String?
  project_id       Int?
  price            Float?
  marketcap        Float?
  holders          Float?
  pair_price       Float?
  liquidity        Float?
  average_holdings Float?
  treasury         Float?
  rfv              Float?
  created_at       DateTime @default(now())
}

model Project {
  id                        Int      @id @default(autoincrement())
  name                      String
  address                   String?
  treasury_address          String?
  rfv_address               String?
  abi_id                    Int?
  token_id                  Int?
  token_pair_id             Int?
  network_id                Int?
  assets_token_id           Int?
  holders_endpoint          String?
  average_holdings_endpoint String?
  enabled                   Boolean  @default(false)
  created_at                DateTime @default(now())
}

model ABI {
  id         Int      @id @default(autoincrement())
  name       String?
  abi        Json?
  token_id   Int?
  project_id Int?
  created_at DateTime @default(now())
}

model Token {
  id         Int      @id @default(autoincrement())
  name       String
  address    String?
  abi_id     Int?
  network_id Int?
  created_at DateTime @default(now())
}

model Liquidity {
  id         Int      @id @default(autoincrement())
  name       String
  address    String?
  token_id   Int?
  project_id Int?
  created_at DateTime @default(now())
}

model Network {
  id           Int      @id @default(autoincrement())
  name         String
  rpc_endpoint String
  created_at   DateTime @default(now())
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  password   String
  api_key    String?
  enabled    Boolean  @default(false)
  created_at DateTime @default(now())
}

model Bots {
  id         Int      @id @default(autoincrement())
  name       String
  presence   String
  tracking   String?
  token      String?
  project_id Int?
  enabled    Boolean  @default(false)
  created_at DateTime @default(now())
}
